


<div id="carouselExampleCaptions" class="carousel slide">

  <div class="carousel-inner">
    <% allCars.forEach((car, index) => { %>


    <div class="carousel-item  <%- index===0 ? 'active': '' %> "><%- car.pax %>
      <img src="<%- car.img %>" class="d-block " style="width: 50%;" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <div class="brand-model-title"><h3><%- car.brand %> <%- car.model %></h3></div>
        <h3>
          <div class="car-carousel-icons-outter-container">
            <div class="car-carousel-icons-inner-container"><img src="/images/gas-station.png" alt="gas pump icon" class="car-carousel-icons"> <%- car.fuel %></div>
            <div class="car-carousel-icons-inner-container"><img src="/images/gears-black.png" alt="gear icon" class="car-carousel-icons"> <%- car.gearbox %></div>
          </div>
          <div class="car-carousel-icons-outter-container">
            <div class="car-carousel-icons-inner-container"><img src="/images/car-door-black-full.png" alt="car door icon" class="car-carousel-icons"> <%- car.doors %></div>
            <div class="car-carousel-icons-inner-container"><img src="/images/car-seat-black-full.png" alt="car seat icon" class="car-carousel-icons"> <%- car.pax %></div>
            <div class="car-carousel-icons-inner-container"><img src="/images/luggage-black-full.png" alt="luggage case icon" class="car-carousel-icons"> <%- car.luggage %></div>
          </div>
        </h3>

        <a href="/cars/<%- car._id %>">select </a>
      </div>
    </div>
    <% }) %>



  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


