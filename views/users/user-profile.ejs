<div class="booking-page">
  <h3>Your Bookings</h3>

  <div class="booking-container">
   
    <% if (typeof bookings ==='undefined') { %>
      <div>    
       <div class="alert alert-info">
         no bookings at the moment
   
       
       </div>
       <br>
       <a class="button" href="/cars">Get started</a>  
     </div>
   <% } %>


    <% bookings.forEach(booking => { %>
    <div class="booking">
      <img class="card-img-top" src="<%- booking.car.img%>" alt="car image">
      <div class="booking-body">
        <h5 class="booking-title"><%- booking.car.brand  %> <%- booking.car.model  %></h5>
        <p class="booking-text">Pickup: <%- booking.startDate%><br> <br> Return: <%- booking.endDate%></p>
        <p class="booking-text"><%- booking.total  %> â‚¬</p>
        <div class="booking-buttons">
          <a class="button" href="/book/<%- booking._id %>">Details</a>
          <a class="button" href="/book/<%- booking._id %>/delete">Cancel</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>