
<h3 class="title"  style="margin-bottom: -50px;" ><%- car.brand %><%- car.model %></h3>
<div class="details">


  <div class="info">
    <ul>
      <li>
        <img src="/images/gears-black.png" alt="gear icon" class="car-carousel-icons"> <%- car.gearbox %>
      </li>
      <li>
        <img src="/images/gas-station.png" alt="car door icon" class="car-carousel-icons"> <%- car.fuel %>
      </li>
      <li>
        <img src="/images/car-seat-black-full.png" alt="car seat icon" class="car-carousel-icons"> <%- car.pax %>
      </li>
      <li>
        <img src="/images/car-door-black-full.png" alt="gas pump icon" class="car-carousel-icons"> <%- car.doors %>
      </li>
      <li>
        <img src="/images/luggage-black-full.png" alt="luggage case icon" class="car-carousel-icons"> <%- car.luggage %>
      </li>
      <li>
        <img src="/images/euro-sign-black.png" alt="euro sign icon" class="car-carousel-icons"> <%- car.ppd %>
      </li>
    </ul>



  </div>
  <div class="car-details-picture">
    <img src="<%- car.img %>" alt="">
  </div>

  <h3 class="title-mobile"  ><%- car.brand %><%- car.model %></h3>
  <form action="/book/<%- car._id%>" method="post" class="form-detail">

    <% if(typeof errorMsg!= 'undefined'){ %>
    <div class="alert alert-danger"><%-errorMsg %> </div>
    <%  } %>

    <select name="branch" class="form-control">

      <% branches.forEach(branch => { %>
      <option value="<%- branch.name %>"><%- branch.name %></option>
      <% }) %>
    </select>
    <input type="date" class="form-control" name="startDate">
    <input type="date" class="form-control" name="endDate">
    <button type="submit">BOOK</button>
  </form>

</div>