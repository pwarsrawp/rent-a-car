<h3 class="title"><%- car.brand %><%- car.model %></h3>
<div class="details">


  <div class="info">
    <ul>
      <li>
        Class: <%- car.class %>
      </li>
      <li>
        <i class="fa-solid fa-gear"></i> <%- car.gearbox %>
      </li>
      <li>
        <i class="fa-solid fa-door-closed"></i> <%- car.doors %>
      </li>
      <li>
        <i class="fa-solid fa-person"></i> <%- car.pax %>
      </li>
      <li>
        <i class="fa-solid fa-gas-pump"></i> <%- car.fuel %>
      </li>
      <li>
        <i class="fa-solid fa-briefcase"></i> <%- car.luggage %>
      </li>
      <li>
        <i class="fa-solid fa-hand-holding-dollar"></i></i> <%- car.ppd %>
      </li>
    </ul>



  </div>
  <div class="picture">
    <img src="<%- car.img %>" alt="">
  </div>


  <form action="/book/<%- car._id%>" method="post" class="form-detail">

    <% if(typeof errorMsg!= 'undefined'){ %>
    <div class="alert alert-danger"><%-errorMsg %> </div>
    <%  } %>

    <select name="branch" class="form-control">

      <% branches.forEach(branch => { %>
      <option value="<%- branch.name %>"><%- branch.name %></option>
      <% }) %>
    </select>
    <input type="date" class="form-control" name="startDate">
    <input type="date" class="form-control" name="endDate">
    <button type="submit">BOOK</button>
  </form>

</div>